@model CentralOngs.Models.VacancyModel

@{
    ViewData["Title"] = "Delete";
}
@if (User.IsInRole("Ong")){
    <a asp-controller="Job" asp-action="Index" class="text-decoration-none"><i class="fa-solid fa-arrow-left"></i> Voltar</a>
    <h3>Tem certeza que deseja remover o candidato?</h3>
}else
{
    <a asp-controller="Voluntarios" asp-action="MyVacancies" asp-route-id="@Model.UserVoluntarioId" class="text-decoration-none"><i class="fa-solid fa-arrow-left"></i> Voltar</a>
    <h3>Tem certeza que deseja candidatura?</h3>
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserVoluntario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserVoluntario.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserVoluntarioAbout)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserVoluntarioAbout)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Job)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Job.Name)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
