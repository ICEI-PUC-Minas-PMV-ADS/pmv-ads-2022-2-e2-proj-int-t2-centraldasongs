@model CentralOngs.Models.UserVoluntarioModel

@{
    ViewData["Title"] = "Details";
}
<a asp-controller="Job" asp-action="Index" class="text-decoration-none"><i class="fa-solid fa-arrow-left"></i> Voltar</a>

<h1>Informações do Voluntário Cadastrado</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateBirthDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateBirthDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contact)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.StateName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.District)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.District)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.Complement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Complement)
        </dd>
    </dl>

</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
        @if (User.IsInRole("Voluntario") && Model.Id.ToString() == User.Claims.ElementAt(1).Value)
        {
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Deletar</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
            <a asp-action="MyVacancies" asp-route-id="@Model.Id" class="btn btn-primary">Minhas candidaturas</a>
        }
    }
</div>