@model CentralOngs.Models.VacancyModel

@{
    ViewData["Title"] = "ApplyVacancy";
}

<h1>ApplyVacancy</h1>

<h4>JobModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApplyVacancy">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserVoluntarioAbout" class="control-label"></label>
                <textarea placeholder="Não obrigatorio" asp-for="UserVoluntarioAbout" class="form-control"></textarea>
                <span asp-validation-for="UserVoluntarioAbout" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Canditar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
