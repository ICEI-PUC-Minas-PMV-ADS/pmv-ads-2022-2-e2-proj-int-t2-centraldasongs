@model CentralDasOngs.Models.UserOngModel

@{
    ViewData["Title"] = "UpdatePassword";
}

<h1>UpdatePassword</h1>

<h4>UserOngModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdatePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label" ></label>
                <input asp-for="Password" class="form-control" name="password" id="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input class="form-control" name="confirm_password" id="confirm_password" />
            </div>
            <div>
                <p></p>
                <p id='message_password'></p>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" id="confirm_btn"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
